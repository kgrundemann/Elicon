<section id="contact">
  <div class="contact-info">
    <h2>Skontaktuj się z nami:</h2>
    <p>Email: biuro@elicon.com</p>
    <p>Telefon: +48 608 626 220</p>
  </div>
  <button class="popup-open">Napisz do nas</button>
  <!-- POPUP -->
  <div class="popup-wrapper">
    <div class="popup">
      <div class="close-btn"></div>
      <form id="contactForm" class="popup-form" method="post">
        <h2 class="popup-form__title">Formularz kontaktowy</h2>
        <input
          id="name"
          type="text"
          name="name"
          class="popup-form__input"
          placeholder="Imię i Nazwisko"
        />
        <input
          id="email"
          type="email"
          name="email"
          class="popup-form__input"
          placeholder="Adres Email"
        />
        <input
          id="subject"
          type="text"
          name="subject"
          class="popup-form__input"
          placeholder="Temat"
        />
        <textarea
          id="message"
          name="message"
          AC
          class="popup-form__input"
        ></textarea>

        <button type="submit" class="popup-form__submit">Wyślij</button>
      </form>
    </div>
  </div>
  <!-- END OF POPUP  -->
</section>
